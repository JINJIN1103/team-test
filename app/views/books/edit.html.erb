<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        
        <% if @book.errors.any? %>
        <div class="error_explanation">
          <h2><%= @book.errors.count %> error prohibited this obj from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
        </div>
        <% end %>
                
            <%= form_with model:@book, local:true do |f| %>
            <div class="form-group">
              <label for="inputName">Title</label>
              <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"名前"%>
            </div>
            <div class="form-group">
              <label for="introduction">Opinion</label>
              <%= f.text_field :body, autofocus: true, id:"introduction", placeholder:"自己紹介文"%>
            </div>
              <%= f.submit "Update Book" ,class:'btn btn-success'%>
            <% end %>

              <%=(link_to"Show", book_path(params[:id]) ,{class: "book"})%>
            |
              <%=(link_to"Back", books_path, {class: "book"})%>
    </div>
   </div>
  </div>
</main>