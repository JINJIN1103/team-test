    <div class="comments">
     <table>
       <thead>
         <tr>
         </tr>
       </thead>
       <tbody>
            <% books.book_comments.each do |book_comment| %>
            <tr>
              <td>
                <%= link_to user_path(book_comment.user) do %>
                <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
                <%= book_comment.user.name %>
                <% end %>
              </td>

              <!--<td><%#= book_comment.created_at.strftime('%Y/%m/%d') %></td>-->
              <td><%= book_comment.comment %></td>

              <% if book_comment.user == current_user %>
              <td>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment),class:'btn btn-sm btn-danger destroy_book_765',method: :delete,remote: true %>
              </td>
              <% end %>

            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    
